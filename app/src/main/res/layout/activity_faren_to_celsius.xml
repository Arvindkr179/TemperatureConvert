<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FarenToCelsius">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="˚F ="
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/FarenTemp"
        app:layout_constraintEnd_toStartOf="@+id/FarenTemp"
        app:layout_constraintStart_toEndOf="@+id/temperatureC"
        app:layout_constraintTop_toTopOf="@+id/FarenTemp"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="HardcodedText" />

    <EditText
        android:id="@+id/temperatureC"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="234dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="79dp"
        android:ems="10"
        android:hint="0"
        android:inputType="text"
        android:textAlignment="viewEnd"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/Convertcf"
        app:layout_constraintEnd_toStartOf="@+id/textView2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/FarenTemp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="184dp"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:layout_constraintTop_toTopOf="@+id/textView4"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="248dp"
        android:layout_marginEnd="160dp"
        android:text="˚C"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="312dp"
        android:layout_height="33dp"
        android:layout_marginTop="75dp"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="125dp"
        android:text="Convert Farenheit To Celsius"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/temperatureC"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/Convertcf"
        android:layout_width="127dp"
        android:layout_height="62dp"
        android:layout_marginTop="92dp"
        android:layout_marginEnd="140dp"
        android:text="Convert"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/temperatureC" />

    <Button
        android:id="@+id/Bck"
        android:layout_width="131dp"
        android:layout_height="70dp"
        android:layout_marginTop="120dp"
        android:text="Back"
        app:layout_constraintEnd_toEndOf="@+id/Convertcf"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/Convertcf"
        app:layout_constraintTop_toTopOf="@+id/Convertcf" />
</androidx.constraintlayout.widget.ConstraintLayout>